{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "$id": "http://example.com/rbac-permission.schema.json",
  "title": "Root Schema",
  "type": "array",
  "default": [],
  "items": {
    "title": "A Schema",
    "type": "object",
    "required": ["resource", "action"],
    "properties": {
      "type": {
        "title": "The type Schema",
        "type": "string",
        "examples": ["allow", "deny"],
        "enum": ["allow", "deny"]
      },
      "resource": {
        "title": "The resource Schema",
        "type": "string",
        "examples": ["product.*", "product.description", "product"],
        "pattern": "^([\\w-]+|\\*)(\\.([\\w-]+|\\*))*$"
      },
      "resourceType": {
        "type": "string",
        "enum": ["menu", "page", "component"]
      },
      "action": {
        "type": "string",
        "anyOf": [
          {
            "enum": [
              "get",
              "get.all",
              "update",
              "update.all",
              "delete",
              "delete.all",
              "post",
              "*"
            ]
          },
          {
            "pattern": "^([\\w-]+|\\*)(\\.([\\w-]+))*$"
          }
        ]
      }
    },
    "examples": [
      {
        "type": "allow",
        "resource": "product.*"
      },
      {
        "type": "deny",
        "resource": "product.description"
      },
      {
        "resource": "product"
      }
    ]
  },
  "examples": [
    [
      {
        "type": "allow",
        "resource": "product.*"
      },
      {
        "type": "deny",
        "resource": "product.description"
      },
      {
        "resource": "product"
      }
    ]
  ]
}
